# EFIR Budget Planning Application - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# =============================================================================

# Database connection string (efir_budget schema)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Direct database connection (for migrations, bypassing connection pooling)
# Format: postgresql+asyncpg://user:password@host:port/database
DIRECT_URL=postgresql+asyncpg://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (NEVER expose in frontend, backend only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development | staging | production)
NODE_ENV=development

# Application port
VITE_PORT=5173

# Backend API port
API_PORT=8000

# Backend API URL
VITE_API_URL=http://localhost:8000

# =============================================================================
# FEATURE FLAGS (optional)
# =============================================================================

# Enable real-time collaboration features
VITE_ENABLE_REALTIME=true

# Enable scenario comparison
VITE_ENABLE_SCENARIOS=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS (future)
# =============================================================================

# Odoo API configuration (for actuals import)
# ODOO_API_URL=https://your-odoo-instance.com
# ODOO_API_KEY=your-odoo-api-key

# AEFE data integration
# AEFE_DATA_SOURCE=manual

# =============================================================================
# MONITORING & ANALYTICS (optional)
# =============================================================================

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for API authentication (generate a strong random string)
JWT_SECRET=your-jwt-secret-here

# Session secret
SESSION_SECRET=your-session-secret-here

# =============================================================================
# CURRENCY & LOCALE
# =============================================================================

# Default currency
DEFAULT_CURRENCY=SAR

# Default locale
DEFAULT_LOCALE=fr-FR

# EUR to SAR exchange rate (update quarterly)
EUR_TO_SAR_RATE=4.05

# =============================================================================
# NOTES
# =============================================================================
#
# - Never commit .env.local to version control
# - Use different values for development, staging, and production
# - Rotate secrets regularly
# - Keep the efir_budget schema isolated from other applications in Supabase
# - Use DIRECT_URL for database migrations (bypasses connection pooler)
# - Use DATABASE_URL for application connections (uses connection pooler)
#
