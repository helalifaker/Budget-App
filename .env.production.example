# EFIR Budget Planning Application - Production Environment Variables
# WARNING: Never commit this file to Git! Add to .gitignore

# ======================
# Database Configuration
# ======================
POSTGRES_USER=efir
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_STRONG_PASSWORD
POSTGRES_DB=efir_budget
POSTGRES_PORT=5432

# Full connection strings
DATABASE_URL=postgresql://efir:CHANGE_ME_IN_PRODUCTION_STRONG_PASSWORD@db:5432/efir_budget

# ======================
# Supabase Configuration
# ======================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ======================
# Backend Configuration
# ======================
JWT_SECRET=CHANGE_ME_LONG_RANDOM_SECRET_KEY_FOR_JWT_SIGNING
ENVIRONMENT=production
ALLOWED_ORIGINS=https://budget.efir-school.com,https://www.budget.efir-school.com

# Backend port (internal)
BACKEND_PORT=8000

# ======================
# Frontend Configuration
# ======================
# API base URL (external - what browser uses)
VITE_API_BASE_URL=https://api.budget.efir-school.com/api/v1

# Supabase (frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Frontend port (nginx)
FRONTEND_PORT=80

# ======================
# Redis Configuration
# ======================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ======================
# Odoo Integration
# ======================
ODOO_URL=https://your-company.odoo.com
ODOO_DATABASE=your_database
ODOO_API_KEY=your_odoo_api_key_here

# ======================
# Skolengo Integration
# ======================
SKOLENGO_API_URL=https://api.skolengo.com
SKOLENGO_API_KEY=your_skolengo_api_key_here
SKOLENGO_SCHOOL_ID=your_school_id

# ======================
# AEFE Configuration
# ======================
AEFE_PRRD_RATE_EUR=41863
EUR_TO_SAR_RATE=4.2

# ======================
# Email Configuration (optional)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@efir-school.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@efir-school.com

# ======================
# Monitoring & Logging
# ======================
# Sentry DSN (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ======================
# Security
# ======================
# Session timeout (minutes)
SESSION_TIMEOUT=60

# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Password requirements
MIN_PASSWORD_LENGTH=12

# ======================
# Performance
# ======================
# Cache TTL (seconds)
CACHE_TTL=300

# Max request size (MB)
MAX_REQUEST_SIZE=10

# Rate limiting (requests per minute)
RATE_LIMIT=300

# ======================
# Deployment
# ======================
# Docker registry (if using private registry)
DOCKER_REGISTRY=registry.efir-school.com

# Image tags
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# ======================
# Backup Configuration
# ======================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=efir-budget-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
