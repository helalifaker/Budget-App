{
  "name": "efir-budget-app",
  "version": "0.1.0",
  "private": true,
  "description": "EFIR School Budget Planning Application - Monorepo",
  "scripts": {
    "dev": "concurrently \"pnpm --filter efir-budget-frontend dev\" \"cd backend && .venv/bin/uvicorn app.main:app --reload\"",
    "build": "pnpm --filter efir-budget-frontend build",
    "lint": "pnpm --filter efir-budget-frontend lint && cd backend && .venv/bin/ruff check app",
    "typecheck": "pnpm --filter efir-budget-frontend typecheck && cd backend && .venv/bin/mypy app",
    "test": "pnpm --filter efir-budget-frontend test && cd backend && .venv/bin/pytest",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx}": [
      "cd frontend && npx eslint --fix",
      "cd frontend && npx prettier --write"
    ],
    "backend/**/*.py": [
      "cd backend && .venv/bin/ruff check --fix app",
      "cd backend && .venv/bin/ruff format app"
    ]
  }
}
